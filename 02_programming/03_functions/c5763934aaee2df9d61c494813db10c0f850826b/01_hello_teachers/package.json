{
  "name": "01_hello_teachers",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "license": "MIT",
  "scripts": {
    "start": "node ./src/index.js",
    "test": "eslint --ext .js,.ts . && sparta test"
  },
  "devDependencies": {
    "eslint": "7.26.0",
    "jest": "26.6.3",
    "camp2-helpers": "fewlines-education/camp2-helpers#main"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ignorePatterns": [
      "node_modules/",
      "*.test.js",
      "src.sample/*"
    ],
    "rules": {
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1,
          "ObjectExpression": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error",
      "no-console": 0,
      "no-unused-vars": 0,
      "no-template-curly-in-string": "warn",
      "array-callback-return": "error",
      "no-global-assign": "error",
      "no-implied-eval": "error",
      "no-param-reassign": "error",
      "no-return-assign": "error",
      "no-self-compare": "error",
      "no-sequences": "error"
    }
  }
}
